/* pages/msg/msg.wxss */
.msg-card {
    margin: 0 16px;
    font-size: 14px;
    overflow: hidden;
    position: relative;
    background: #fff;
}
.msg-card-heard {
    display: flex;
    padding: 6px 16px;
    align-items: center;
}
.msg-card-heard-content {
    flex: 2;
    display: flex;
    text-align: left;
}
.msg-card-heard-content-img {
    flex: 1;
    text-align: left;
    margin-right: 2px;
}
.msg-card-heard-content-text {
    flex: 2;
    text-align: left;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    align-items: center;
    display: flex;
}
.msg-card-heard-content-text-title {
    font-size: 16px;
}
.msg-card-heard-content-text-msg {
    color: #80848f;
}
.msg_bottom {
    margin-bottom: 50px;
}
.msg-card-header-extra {
    flex: 1;
    text-align: right;
    font-size: 12px;
    color: #80848f;
}